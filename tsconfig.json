{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*": ["node_modules/"]
    }
  },
  "include": ["src/**/*"]
}
